{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],
    
    "paths": {
      "@/*" : ["./src/*"]
    },

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true ,

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node16"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}